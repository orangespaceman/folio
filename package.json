{
  "name": "petegoodman.com",
  "version": "3.1.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:thegingerbloke/folio.git"
  },
  "scripts": {
    "build:css": "postcss --config postcss.json",
    "build:js": "webpack --config webpack.config.js",
    "build": "npm-run-all build:*",
    "lint:css": "stylelint \"src/_components/**/*.css\" && stylelint \"src/_css/**/*.css\"",
    "lint:js": "eslint src/_components/ src/_js/",
    "lint": "npm-run-all lint:*",
    "watch:css": "chokidar 'src/_components/**/*.css' 'src/_css/**/*.css' -c 'npm run build:css'",
    "watch:js": "npm run build:js -- --watch",
    "watch": "npm-run-all --parallel watch:*"
  },
  "dependencies": {
    "layzr.js": "^2.2.1",
    "moment": "^2.17.1",
    "normalize.css": "^5.0.0",
    "suitcss-base": "^2.0.0",
    "superagent": "^3.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "chokidar-cli": "^1.2.0",
    "cssnano": "^3.9.1",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "npm-run-all": "^3.1.2",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-easy-import": "^1.0.1",
    "stylelint": "^7.7.0",
    "stylelint-config-suitcss": "^8.0.0",
    "webpack": "^1.14.0"
  }
}
